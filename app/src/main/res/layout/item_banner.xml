<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/textview_border"
    android:layout_marginStart="@dimen/border"
    android:layout_marginTop="@dimen/border"
    android:layout_marginBottom="@dimen/border">

    <TextView
        android:id="@+id/item_banner_siteId"
        android:layout_marginTop="@dimen/border"
        android:layout_marginStart="@dimen/border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="siteid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_banner_siteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="基隆"
        android:layout_marginStart="@dimen/border"
        app:layout_constraintLeft_toRightOf="@+id/item_banner_siteId"
        app:layout_constraintTop_toTopOf="@id/item_banner_siteId"
        app:layout_constraintBottom_toBottomOf="@id/item_banner_siteId"/>

    <TextView
        android:id="@+id/item_banner_PM25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_marginStart="@dimen/border"
        android:layout_marginEnd="@dimen/border"
        app:layout_constraintLeft_toRightOf="@id/item_banner_siteName"
        app:layout_constraintTop_toTopOf="@id/item_banner_siteName"
        app:layout_constraintBottom_toBottomOf="@+id/item_banner_siteName"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/item_banner_county"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/item_banner_siteId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/border"
        android:layout_marginStart="12dp"
        android:text="基隆市"/>

    <TextView
        android:id="@+id/item_banner_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:text="很好"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_banner_county"
        app:layout_constraintTop_toBottomOf="@+id/item_banner_siteName" />



</androidx.constraintlayout.widget.ConstraintLayout>